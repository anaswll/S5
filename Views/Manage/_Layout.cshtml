@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@inject UserManager<ApplicationUser> UserManager
@{
    var user = (await UserManager.GetUserAsync(User));
    bool x = await UserManager.IsInRoleAsync(user, "user");
}
<hr>
<div class="container bootstrap snippet">
    @if (x)
    {
        <div class="row">
            <div class="col-sm-10"><h1>User</h1></div>
        </div>

    }
    else
    {
        <div class="row">
            <div class="col-sm-10"><h1>Entreprise</h1></div>
        </div>
    }
    
    <br/>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->

            @if (x)
            {
                <div class="text-center">
                    <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="rounded-circle" alt="avatar">
                   

                </div><br>



                <ul class="list-group">
                    <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Shares</strong></span> 125</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Likes</strong></span> 13</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span> 37</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Followers</strong></span> 78</li>
                </ul>
                <br>
                <br>
                <div class="panel panel-default">
                    <div class="panel-heading">Social Media</div>
                    <div class="panel-body">
                        <i class="fa fa-facebook fa-2x"></i> <i class="fa fa-github fa-2x"></i> <i class="fa fa-twitter fa-2x"></i> <i class="fa fa-pinterest fa-2x"></i> <i class="fa fa-google-plus fa-2x"></i>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center">
                    <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                    

                </div><br>



                <ul class="list-group">
                    <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Likes</strong></span> 13</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Offers</strong></span> 37</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Followers</strong></span> 78</li>
                </ul>
                <br>
                <br>
                <br>
                <br>
                <div class="panel panel-default">
                    <div class="panel-heading">Social Media</div>
                    <div class="panel-body">
                        <i class="fa fa-facebook fa-2x"></i> <i class="fa fa-github fa-2x"></i> <i class="fa fa-twitter fa-2x"></i> <i class="fa fa-pinterest fa-2x"></i> <i class="fa fa-google-plus fa-2x"></i>
                    </div>
                </div>
            }


        </div><!--/col-3-->
        <div class="col-sm-9">
            <ul class="nav nav-tabs">
                @await Html.PartialAsync("_ManageNav")
            </ul>
        <br />

            @RenderBody()

        </div><!--/tab-content-->
        
    </div><!--/col-9-->
</div><!--/row-->


@section Scripts {
    @RenderSection("Scripts", required: false)
}

